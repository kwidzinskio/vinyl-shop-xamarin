<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
                 xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                 xmlns:d="http://xamarin.com/schemas/2014/forms/design"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                 mc:Ignorable="d"
                 NavigationPage.HasNavigationBar="False"
                 x:Class="RealWorldApp.Pages.AddImagePage">
    <ContentPage.Content>
        <ScrollView BackgroundColor="#f5ebe9">
            <StackLayout VerticalOptions="FillAndExpand">
                <Label Text="Choose Images"
                           Margin="40"
                           TextColor="#961111"
                           HorizontalTextAlignment="Center"
                           FontAttributes="Bold"
                           FontSize="Title" />
                <FlexLayout VerticalOptions="CenterAndExpand"
                                Wrap="Wrap"
                                JustifyContent="SpaceEvenly">
                    <Image Source="placeholder.png"
                               HeightRequest="100"
                               WidthRequest="100"
                               x:Name="Img1">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer x:Name="TapImg1" Tapped="TapImg1_Tapped"/>
                        </Image.GestureRecognizers>
                    </Image>
                    <Image Source="placeholder.png"
                               HeightRequest="100"
                               WidthRequest="100"
                               x:Name="Img2">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer x:Name="TapImg2" Tapped="TapImg2_Tapped"/>
                        </Image.GestureRecognizers>
                    </Image>
                    <Image Source="placeholder.png"
                               HeightRequest="100"
                               WidthRequest="100"
                               x:Name="Img3">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer x:Name="TapImg3" Tapped="TapImg3_Tapped"/>
                        </Image.GestureRecognizers>
                    </Image>
                    <Image Source="placeholder.png"
                               HeightRequest="100"
                               WidthRequest="100"
                               x:Name="Img4">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer x:Name="TapImg4" Tapped="TapImg4_Tapped"/>
                        </Image.GestureRecognizers>
                    </Image>
                    <Image Source="placeholder.png"
                               HeightRequest="100"
                               WidthRequest="100"
                               x:Name="Img5">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer x:Name="TapImg5" Tapped="TapImg5_Tapped"/>
                        </Image.GestureRecognizers>
                    </Image>
                    <Image Source="placeholder.png"
                               HeightRequest="100"
                               WidthRequest="100"
                               x:Name="Img6">
                        <Image.GestureRecognizers>
                            <TapGestureRecognizer x:Name="TapImg6" Tapped="TapImg6_Tapped"/>
                        </Image.GestureRecognizers>
                    </Image>
                </FlexLayout>

                <Label Text="You can add up to six images"
                           Margin="10"
                           TextColor="#961111"
                           HorizontalTextAlignment="Center"
                           FontSize="Subtitle" />
                <Button Text="Done"
                            VerticalOptions="EndAndExpand"
                            TextColor="White"
                            BackgroundColor="Black"
                            x:Name="BtnDone"
                            Clicked="BtnDone_Clicked" />
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>